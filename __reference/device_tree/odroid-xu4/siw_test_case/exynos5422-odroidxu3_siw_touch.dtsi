	/*
	 * add more pin configuration for I2C SC/SDA to pinctrl@14010000
	 * this area is alreay defined in exynos5422-pinctrl.dtsi
	 */
	pinctrl@14010000 {
		i2c1_bus: i2c1-bus {
			/* gpb3-3 : SCL, gpb3-2 : SDA */
			samsung,pins = "gpb3-3", "gpb3-2";
			samsung,pin-function = <2>;
			samsung,pin-pud = <3>;
			samsung,pin-drv = <3>;
		};
	};

	/*
	 * enable I2C@12C70000 adapter
	 */
	i2c_1: i2c@12C70000 {
		compatible = "samsung,s3c2440-i2c";
		reg = <0x12C70000 0x1000>;
		interrupts = <0 57 0>;
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&i2c1_bus>;
		clocks = <&clock 1493>, <&clock 1493>;
		clock-names = "rate_i2c", "gate_i2c";
	};
};

&i2c_1 {					// indicates parent device : I2C_1 adapter block
//
	sw1828@28 {				// define new client device(sw1828), slave addr is 0x28
		status = "okay";
		compatible = "siw,sw1828";	// compatible name (see touch_sw1828.c)
		reg = <0x28>;
		interrupt-parent = <&gpx1>;
		interrupts = <6 0x02>;
		irqflags = <0x2002>;

		chip_flags = <0x100>;

		reset-gpio = <&gpx1 7 GPIO_ACTIVE_LOW>;
		irq-gpio = <&gpx1 6 GPIO_ACTIVE_LOW>;

		// Caps
		max_x = <800>;
		max_y = <480>;
		max_pressure = <0xff>;
		max_width = <15>;
		max_orientation = <1>;
		max_id = <10>;

		// role
		hw_reset_delay = <210>;
		sw_reset_delay = <90>;
		use_lpwg = <0>;
		use_lpwg_test = <0>;

		// firmware
		use_firmware = <0>;
		use_fw_upgrade = <0>;
	//	fw_image = "siw/lg4894/ph1/L0W57PH1_0_02.img";
	//	panel_spec = "siw/lg4894/ph1/ph1_limit.txt";
	//	panel_spec_mfts = "siw/lg4894/ph1/ph1_limit_mfts.txt";
	};
